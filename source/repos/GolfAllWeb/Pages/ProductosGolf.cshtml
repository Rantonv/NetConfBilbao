@page
@model ChucheriasWeb.Pages.ProductosGolfModel
@{
    ViewData["Title"] = "Material de Golf";
    var categoriasFijas = new List<(string Nombre, string Imagen)>
    {
        ("Palos", "https://images.unsplash.com/photo-1519864600265-abb23847ef2c?auto=format&fit=crop&w=400&q=80"),
        ("Bolas", "https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=400&q=80"),
        ("Bolsas", "https://images.unsplash.com/photo-1464983953574-0892a716854b?auto=format&fit=crop&w=400&q=80"),
        ("Ropa", "https://images.unsplash.com/photo-1512436991641-6745cdb1723f?auto=format&fit=crop&w=400&q=80"),
        ("Accesorios", "https://images.unsplash.com/photo-1519125323398-675f0ddb6308?auto=format&fit=crop&w=400&q=80")
    };
}

<style>
    body {
        background: linear-gradient(135deg, #b2f7ef 0%, #f7d6e0 100%);
    }
    .categoria-img-card {
        border: 2px solid #2e8b57;
        border-radius: 18px;
        box-shadow: 0 4px 16px rgba(46, 139, 87, 0.15);
        background: #f8fff8;
        transition: transform 0.2s;
        text-align: center;
        padding: 1rem 0 0.5rem 0;
        margin-bottom: 2rem;
        height: 100%;
        cursor: pointer;
    }
    .categoria-img-card:hover {
        transform: scale(1.04);
        box-shadow: 0 8px 24px rgba(46, 139, 87, 0.25);
    }
    .categoria-img {
        width: 100%;
        max-width: 220px;
        height: 180px;
        object-fit: cover;
        border-radius: 16px 16px 0 0;
        margin-bottom: 1rem;
    }
    .categoria-title {
        color: #2e8b57;
        font-weight: bold;
        font-size: 1.3rem;
        margin-bottom: 0.5rem;
    }
    .buscador-categorias {
        max-width: 400px;
        margin: 0 auto 2rem auto;
    }
    .buscador-productos {
        max-width: 400px;
        margin: 2rem auto 2rem auto;
    }
    .producto-card {
        border: 2px solid #2e8b57;
        border-radius: 18px;
        box-shadow: 0 4px 16px rgba(46, 139, 87, 0.15);
        background: #f8fff8;
        transition: transform 0.2s;
        margin-bottom: 2rem;
    }
    .producto-title {
        color: #2e8b57;
        font-weight: bold;
    }
    .producto-tipo {
        color: #1e3d59;
    }
    .producto-marca {
        color: #b22222;
    }
</style>

<div class="container py-5">
    <h1 class="display-4 text-center mb-4">Catálogo de Material de Golf</h1>

    <div class="buscador-categorias">
        <input id="buscadorCategorias" type="text" class="form-control form-control-lg" placeholder="Buscar categoría..." autocomplete="off" />
    </div>

    <div class="row justify-content-center" id="categorias-lista">
        @foreach (var cat in categoriasFijas)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch categoria-item">
                <form method="get" asp-page="/ProductosGolf">
                    <input type="hidden" name="categoria" value="@cat.Nombre" />
                    <button type="submit" class="categoria-img-card w-100 p-0 border-0 bg-transparent">
                        <img class="categoria-img" src="@cat.Imagen" alt="@cat.Nombre" />
                        <div class="categoria-title">@cat.Nombre</div>
                    </button>
                </form>
            </div>
        }
    </div>

    @if (Model.ProductosPorCategoria != null && Model.ProductosPorCategoria.Count > 0)
    {
        <div class="buscador-productos">
            <input id="buscadorProductos" type="text" class="form-control form-control-lg" placeholder="Buscar producto por nombre, tipo o marca..." autocomplete="off" />
        </div>
        <h2 class="mt-3 mb-4 text-center">Productos de la categoría seleccionada</h2>
        <div class="row justify-content-center" id="productos-lista">
            @foreach (var producto in Model.ProductosPorCategoria)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch producto-item">
                    <div class="producto-card w-100 h-100">
                        <img src="@producto.ImagenUrl" class="card-img-top" alt="@producto.Nombre" style="height: 180px; object-fit: cover; border-radius: 16px 16px 0 0;">
                        <div class="card-body">
                            <h5 class="card-title producto-title">@producto.Nombre</h5>
                            <p class="card-text producto-tipo">Tipo: @producto.Tipo</p>
                            <p class="card-text producto-marca">Marca: @producto.Marca</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
<script>
(function() {
    // Filtrado de categorías
    var catInput = document.getElementById('buscadorCategorias');
    if (catInput) {
        catInput.addEventListener('input', function() {
            var filtro = catInput.value.toLowerCase();
            var items = document.querySelectorAll('.categoria-item');
            items.forEach(function(item) {
                var nombre = item.querySelector('.categoria-title').textContent.toLowerCase();
                item.style.display = nombre.includes(filtro) ? '' : 'none';
            });
        });
    }
    // Filtrado de productos
    var prodInput = document.getElementById('buscadorProductos');
    if (prodInput) {
        prodInput.addEventListener('input', function() {
            var filtro = prodInput.value.toLowerCase();
            var items = document.querySelectorAll('.producto-item');
            items.forEach(function(item) {
                var nombre = item.querySelector('.producto-title').textContent.toLowerCase();
                var tipo = item.querySelector('.producto-tipo').textContent.toLowerCase();
                var marca = item.querySelector('.producto-marca').textContent.toLowerCase();
                item.style.display = (nombre.includes(filtro) || tipo.includes(filtro) || marca.includes(filtro)) ? '' : 'none';
            });
        });
    }
})();
</script>
}
